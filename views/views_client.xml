<odoo>
  <data>

  <!-- gg_client form view -->
  <record id="gg_client_view_form" model="ir.ui.view">
      <field name="name">gg_client.view.form</field>
      <field name="model">gg_client</field>
      <field name="arch" type="xml">
          <form string="">
              <sheet>
                  <group>
                        <field name="name" required="1"/>
                        <field name="code"/>
                        <field name="Mobile" widget="phone_intl" options="{'only_country_codes': ['dz']}"/> 
                        <field name="note"/>
                        <field name="Adresse"/>
                  </group>
              </sheet>
          </form>
      </field>
  </record>
<!-- gg_client tree view -->
<record id="gg_client_view_tree" model="ir.ui.view">
    <field name="name">gg_client.view.tree</field>
    <field name="model">gg_client</field>
    <field name="arch" type="xml">
        <tree>
            <!-- Add your fields here -->
            <field name="name"/>
        </tree>
    </field>
</record>
<!-- gg_client action window -->
<record id="gg_client_action" model="ir.actions.act_window">
    <field name="name">gg_client.action</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">gg_client</field>
    <field name="view_mode">tree,form</field>
    <field name="view_type">form</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
        </p><p>
            <!-- More details about what a user can do with this object will be OK --> 
        </p>
    </field>
</record>


<!-- This Menu Item must have a parent and an action -->
<menuitem id="menu_gg_client" name="gg_client" parent="menu_root_gg_DB" action="gg_client_action" sequence="1"/>


  </data>
</odoo>